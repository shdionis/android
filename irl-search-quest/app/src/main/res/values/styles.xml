<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QuestAppText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/accuratist_regular</item>
    </style>
    <style name="QuestAppText.Primary" parent="QuestAppText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="QuestAppText.Secondary" parent="QuestAppText">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="QuestAppText.Tertiary" parent="QuestAppText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#AFFFFFFF</item>
    </style>

    <style name="QuestDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>